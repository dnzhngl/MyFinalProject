{ 
  // JWT - Jason web token configuration
  "TokenOptions": {
    "Audience": "deniz@deniz.com", //kitle
    "Issuer": "deniz@deniz.com", //uygulayan
    "AccessTokenExpiration": 10, // dakika cinsinden veridğimiz tokenın gecerlilik süresi 
    "SecurityKey": "mysupersecretkeymysupersecretkey" // tokenı oluştururken asp.netin kullanacağı anahtarın ismi - biraz uzun olması gerekitigi icin böyle yazdık.
  },
  // loglama 
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
